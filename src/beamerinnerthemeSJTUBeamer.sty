% Figures and tables.

\usetikzlibrary{decorations.pathmorphing}
\pgfdeclaredecoration{stampline}{initial}
{
  \state{initial}[
    width=\pgfdecorationsegmentlength,
    auto corner on length=\pgfdecorationsegmentlength]
  {
    \pgfpathlineto{\pgfpoint{0.25\pgfdecorationsegmentlength}{0pt}}
    \pgfpathlineto{\pgfpoint{0.33\pgfdecorationsegmentlength}{0.06\pgfdecorationsegmentlength}}
    \pgfpathlineto{\pgfpoint{0.33\pgfdecorationsegmentlength}{0.1\pgfdecorationsegmentlength}}
    \pgfpathlineto{\pgfpoint{0.67\pgfdecorationsegmentlength}{0.1\pgfdecorationsegmentlength}}
    \pgfpathlineto{\pgfpoint{0.67\pgfdecorationsegmentlength}{0.06\pgfdecorationsegmentlength}}
    \pgfpathlineto{\pgfpoint{0.75\pgfdecorationsegmentlength}{0pt}}
    \pgfpathlineto{\pgfpoint{\pgfdecorationsegmentlength}{0pt}}
  }
  \state{final}
  {
    \pgfpathlineto{\pgfpointdecoratedpathlast}
  }
}
\newtcolorbox{stampbox}{%
  capture=hbox,
  enhanced,
  frame empty,
  interior empty,
  sharp corners,
  top=2pt,bottom=2pt,left=2pt,right=2pt,
  borderline={4pt}{0pt}{
    cprimary,
    line width=0.5pt,
    decoration={
      stampline,
      segment length=8pt,
      path has corners=true,
    },
    decorate
  }
}

