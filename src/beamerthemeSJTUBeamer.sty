\def\Hy@WarnOptionDisabled#1{
    \def\next{#1}%
    \def\ignore{driverfallback}%
    \ifx\next\ignore%
    \else\Hy@Warning{%
        Option `#1' has already been used,\MessageBreak 
        setting the option has no effect%
    }\fi
}
